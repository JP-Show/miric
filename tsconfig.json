{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es5", "es6", "ES2018"], //javscript entenda que você utilizar recurso dessas libs
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist", //essa pasta onde vai está o código js quando for compilado
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["/src/@types"]
  },
  "include": ["src/**/*"], //incluir todos os arquivos para verificação do typescript
  "exclude": ["node_modules", "dist"], //ele exclui essas pastas de ser verificada
  "ts-node": {
    "files": true
  }
}
